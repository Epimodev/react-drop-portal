{
  "name": "react-drop-portal",
  "version": "1.0.0-beta.6",
  "description": "A react component which render a portal located near a target element",
  "author": "Frederic Godin",
  "repository": "Epimodev/react-drop-portal",
  "license": "MIT",
  "main": "module/index.js",
  "module": "module/index.js",
  "typings": "module/index.d.ts",
  "keywords": [
    "react",
    "portal",
    "animations",
    "typescript",
    "tslint"
  ],
  "files": [
    "src",
    "module"
  ],
  "scripts": {
    "build": "rm -rf ./module && tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts?(x)'",
    "check-format": "prettier --list-different 'src/**/*.ts?(x)'",
    "storybook": "start-storybook --ci -s ./ -p 9001 -c .storybook",
    "test": "jest",
    "prepublish": "yarn lint && yarn check-format && yarn test && yarn build"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@emotion/core": "^10.0.10",
    "@storybook/react": "^5.1.8",
    "@types/jest": "^24.0.14",
    "@types/react": "^16.8.20",
    "@types/react-dom": "^16.8.4",
    "babel-loader": "^8.0.6",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.2"
  },
  "peer-dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn check-format"
    }
  },
  "dependencies": {
    "react-aniportal": "^0.1.7",
    "tslib": "^1.10.0"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)(test))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "node"
    ]
  }
}
